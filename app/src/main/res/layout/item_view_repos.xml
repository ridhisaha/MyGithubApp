<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_repo_name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_repo_clip"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"

                android:textColor="#4CA1FF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:maxLines="3"
                android:padding="10dp"
                android:textColor="#82868C" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_baseline_circle_24"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="#82868C" />

                <TextView
                    android:id="@+id/tv_stargazers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:drawableStart="@drawable/ic_baseline_star_border_24"
                    android:drawablePadding="10dp"

                    android:gravity="center"
                    android:textColor="#82868C" />

                <TextView
                    android:id="@+id/tv_updated_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:drawablePadding="10dp"
                    android:textColor="#82868C"
                    android:gravity="center"
                  />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_below="@+id/linear_layout"
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>